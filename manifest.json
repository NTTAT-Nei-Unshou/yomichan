{
	"manifest_version": 2,
	"name": "yomi",
	"version": "1.0.0",
	"description": "選択したテキストにふりがなを付けるアドオン",
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_title": "選択したテキストにふりがなを付けるアドオン"
	},
	"background": {
		"page": "html/background.html",
		"persistent": true
	},
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [
				"<all_urls>"
			],
			"js": [
				"lib/jquery/jquery-1.12.4.min.js",
				"js/content.js"
			],
			"css": [
				"css/style.css"
			],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"notifications",
		"webRequest",
		"storage"
	],
	"homepage_url": "https://github.com/guoweihua1982",
	"options_page": "html/options.html",
	"options_ui": {
		"page": "html/options.html",
		"chrome_style": true
	},
	"omnibox": {
		"keyword": "yomi"
	}
}